<div class="row grid grid-cols-3 gap-4" data-sortable-update-url="<%= link_position_path(link) %>">
  <div class="col-2"></div>
  <div class="col-8">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">
          <%= icon "grip-vertical", variant: "solid", classes: "link_handle" %>
          <%= render partial: "links/inline_name_form", locals: { link: link } %></h5>
        <div class="row">
          <div class="col-8 link-centered">
            <%= render partial: "links/inline_url_form", locals: { link: link } %>
          </div>
          <div class="col-4">
            <%= render "links/link_actions", link: link %>
          </div>
        </div>
        <div class="btn-group btn-group-sm mt-2" role="group" aria-label="...">
          <div>
            <%= link_to "Visit Link", 
              url_for(link.url), 
              class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded", 
              target: "_blank",
              rel: "noopener noreferrer" %>
          </div>
          <div>
            <%= button_to "Delete", link, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded", method: :delete, data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-2"></div>
</div>
