<div class="mt-2" data-controller="clipboard-button">
  <%= link_to url, 
    class: "bg-slate-400 hover:bg-slate-500 text-white font-bold py-2 px-4 rounded",
    data: { 
      clipboard_button_target: "link",
      url: url,
      action: "click->clipboard-button#copy"
    },
    role: "button" do %>
    <span class="" data-clipboard-button-target="share">Share</span> <i class="bi bi-share"></i>
  <% end %>
</div>