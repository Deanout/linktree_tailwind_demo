<div id="<%= dom_id theme %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= theme.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Theme type:</strong>
    <%= theme.theme_type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Css value:</strong>
    <%= theme.css_value %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this theme", theme, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this theme", edit_theme_path(theme), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
